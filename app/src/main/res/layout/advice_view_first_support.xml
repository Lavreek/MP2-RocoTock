<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <include
            android:id="@+id/av1_toolbar_default"
            layout="@layout/toolbar_default"/>
    <include
            android:id="@+id/av1_toolbar_bottom"
            layout="@layout/toolbar_bottom"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/av1_toolbar_default"
            app:layout_constraintBottom_toTopOf="@+id/av1_toolbar_bottom" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout">
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="40dp"/>
        <TextView
                android:text="Составляйте планы"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:layout_marginTop="8dp"
                android:textAlignment="center" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="40dp"/>
        <TextView
                android:text="План – основа самоконтроля. Он помогает структурировать свою деятельность. И не нужно бояться, что план будет загонять вас в свои жесткие рамки. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textAlignment="center"
                android:lineSpacingExtra="8sp" android:fontFamily="sans-serif" android:typeface="monospace"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="40dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp" app:srcCompat="@drawable/img_plan" android:id="@+id/imageView2"/>
    </LinearLayout>
    <Button
            android:text="Дальше"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/avfs_button"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            style="@android:style/Widget.Button" android:textColor="#020202"
            android:background="#FF9A02" android:textSize="14sp"
            android:fontFamily="sans-serif" android:backgroundTintMode="multiply" android:layout_marginBottom="32dp"/>

</android.support.constraint.ConstraintLayout>